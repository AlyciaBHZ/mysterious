# Gemini / Google AI Studio
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash
# Comma-separated fallbacks (optional)
GEMINI_FALLBACK_MODELS=gemini-2.5-flash,gemini-3-flash,gemini-2.5-flash-lite

# Paid user token signing (required for paid flow)
USER_TOKEN_SECRET=

# Auth session token signing (required for user system)
AUTH_TOKEN_SECRET=

# Token TTL (optional)
# - SESSION_TTL_DAYS: session token expiry (default 30)
# - USER_TOKEN_TTL_DAYS: paid/redeem token expiry (default 365)
SESSION_TTL_DAYS=30
USER_TOKEN_TTL_DAYS=365

# Redemption codes table (required for /api/redeem)
# JSON object: { "CODE": { "plan": "basic", "quota": 80 }, ... }
REDEMPTION_CODES_JSON={"BASIC-EXAMPLE-0001":{"plan":"basic","quota":80}}

# Upstash Redis (recommended for durable quota + one-time redeem)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Stripe (recommended for WeChat Pay / Alipay)
STRIPE_SECRET_KEY=
# Stripe webhook secret (recommended; enables server-side fulfillment)
STRIPE_WEBHOOK_SECRET=
FRONTEND_URL=

# Whitelist users (comma-separated emails; case-insensitive)
WHITELIST_EMAILS=

# CORS origin allowlist (comma-separated; enforced by API)
ALLOWED_ORIGINS=

